#!/usr/bin/csh

source /apps/design_environment.csh
setenv UVM_HOME /home/morris/uvm-1.2
vcs -sverilog -timescale=1ns/1ns +vpi +plusarg_save +define+UVM_OBJECT_MUST_HAVE_CONSTRUCTOR +UVM_MAX_QUIT_COUNT=10 +incdir+${UVM_HOME}/src ${UVM_HOME}/src/uvm.sv ${UVM_HOME}/src/dpi/uvm_dpi.cc -CFLAGS -DVCS $argv
if ($status != 0) exit $status
./simv -l sim.log

